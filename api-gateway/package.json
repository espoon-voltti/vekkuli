{
  "name": "vekkuli-api-gateway",
  "version": "0.0.1",
  "description": "API gateway for vekkuli",
  "type": "module",
  "private": true,
  "scripts": {
    "clean": "rm -rf ./build ./dist",
    "build": "yarn clean && yarn install && tsc --build .",
    "lint": "eslint --max-warnings 0 .",
    "lint:fix": "yarn lint --fix",
    "dev": "tsc --build . && concurrently --prefix '[{name}]' --names 'tsc,nodemon' 'tsc --build --preserveWatchOutput -w .' 'NODE_ENV=local nodemon dist/index.js'"
  },
  "dependencies": {
    "@node-saml/node-saml": "5.1.0",
    "@node-saml/passport-saml": "5.1.0",
    "axios": "1.12.2",
    "connect-redis": "9.0.0",
    "cookie-parser": "1.4.7",
    "csurf": "1.11.0",
    "date-fns": "4.1.0",
    "dd-trace": "5.71.0",
    "express": "5.1.0",
    "express-http-proxy": "2.1.2",
    "express-session": "1.18.2",
    "fast-xml-parser": "5.3.0",
    "helmet": "8.1.0",
    "jsonwebtoken": "9.0.2",
    "lodash": "4.17.21",
    "make-error-cause": "2.3.0",
    "nocache": "4.0.0",
    "passport": "0.7.0",
    "pino": "10.0.0",
    "pino-http": "11.0.0",
    "pino-pretty": "13.1.2",
    "query-string": "9.3.1",
    "redis": "5.8.3",
    "source-map-support": "0.5.21",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@types/cookie-parser": "1.4.9",
    "@types/csurf": "1.11.5",
    "@types/express": "5.0.3",
    "@types/express-http-proxy": "1.6.7",
    "@types/express-session": "1.18.2",
    "@types/jsonwebtoken": "9.0.7",
    "@types/lodash": "4.17.20",
    "@types/node": "22.18.13",
    "@types/passport": "1.0.17",
    "@types/passport-strategy": "0.2.38",
    "@types/source-map-support": "0.5.10",
    "concurrently": "9.2.1",
    "eslint": "9.38.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "nodemon": "3.1.10",
    "prettier": "3.6.2",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.2"
  },
  "resolutions": {
    "@node-saml/passport-saml/@types/express": "5.0.3"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/stylistic",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "project": "./tsconfig.json",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ]
    }
  },
  "engines": {
    "node": ">= 22.14.0"
  },
  "packageManager": "yarn@4.10.3"
}
